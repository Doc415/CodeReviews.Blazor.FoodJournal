@inherits LayoutComponentBase
@inject ErrorHandler errorHandler;


    <FluentLayout>
        <FluentHeader>
            FoodJournal
        </FluentHeader>
        <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
            <NavMenu />
            <FluentBodyContent Class="body-content">
                <div class="content">
                    @Body
                </div>
            </FluentBodyContent>
        </FluentStack>
        <FluentFooter>
          @*  <p>Operation result: @errorHandler.MessageToUI</p>    This is custom CRUD feedback notifier but shifted to fluenttoastservice so not needed anymore*@  
        </FluentFooter>
    <FluentTooltipProvider @rendermode="InteractiveServer" />
    <FluentToastProvider @rendermode="InteractiveServer" MaxToastCount="1" Timeout="3000" Position="ToastPosition.BottomRight" RemoveToastsOnNavigation="false" />
    <FluentDialogProvider @rendermode="InteractiveServer" />
    <FluentMessageBarProvider />
   
    </FluentLayout>

    

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>



